<!-- JOINTS (unchanged) -->
<joint name="arm_base_to_mobile_base" type="fixed">
  <parent link="mobile_uvc_base_link"/>
  <child link="gripper_base_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>

<joint name="slider_to_base" type="prismatic">
  <parent link="gripper_base_link"/>
  <child link="slider_carriage_link"/>
  <origin xyz="0 0 ${0.253}" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
