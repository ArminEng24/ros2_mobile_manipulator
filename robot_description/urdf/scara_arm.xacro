<!-- JOINTS (unchanged) -->
<joint name="base_to_footprint" type="fixed">
  <parent link="base_footprint"/>
  <child link="gripper_base_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
</joint>

<joint name="slider_to_base" type="prismatic">
  <parent link="gripper_base_link"/>
  <child link="slider_carriage_link"/>
  <origin xyz="0 0 ${0.253}" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="0" upper="-0.15" effort="50" velocity="0.1"/>
</joint>

<joint name="shoulder_to_slider" type="revolute">
  <parent link="slider_carriage_link"/>
  <child link="shoulder_link"/>
  <origin xyz="0.08 0 ${0.263/2 -0.1315}" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="${-pi/2}" upper="${pi/4}" effort="50" velocity="1.0"/>
</joint>

<joint name="elbow_to_shoulder" type="revolute">
  <parent link="shoulder_link"/>
  <child link="elbow_link"/>
  <origin xyz="0.095 0.047 0" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="${0}" upper="${3.343}" effort="50" velocity="1.0"/>
</joint>

<joint name="wrist_to_elbow" type="revolute">
  <parent link="elbow_link"/>
  <child link="wrist_link"/>
  <origin xyz="0.025 -0.088 0" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <limit lower="${-pi/2}" upper="${pi/2}" effort="50" velocity="1.0"/>
</joint>

<joint name="left_finger_to_wrist" type="prismatic">
  <parent link="wrist_link"/>
