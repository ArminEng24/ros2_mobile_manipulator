<!-- ========================= -->
<!-- BASE LINK -->
<!-- ========================= -->
<link name="gripper_base_link">
  <visual>
    <geometry>
      <mesh filename="file:///home/linos/cad_projects/gripper/base.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <origin xyz="0 ${0.0402/2} ${0.04-0.01}" rpy="${pi} 0 0"/>
    <material name="blue"/>
  </visual>

  <!-- CYLINDER COLLISION -->
  <collision>
    <origin xyz="0.04 ${0.0402/2-0.02} ${0.02}" rpy="${pi} 0 0"/>
    <geometry>
      <cylinder radius="0.06" length="0.06"/>
    </geometry>
  </collision>

  <!-- BOX COLLISION -->
  <collision>
    <origin xyz="0.008 0 0.21" rpy="${pi} 0 0"/>
    <geometry>
      <box size="0.06 0.1 0.317"/>
    </geometry>
  </collision>

  <!-- INERTIA USING MACROS -->
  <xacro:cylinder_inertia 
      m="0.8"
      r="0.06"
      h="0.06"
      o_xyz="0.04 ${0.0402/2-0.02} 0.02"
      o_rpy="${pi} 0 0"/>

  <xacro:box_inertia
      m="2.2"
      x="0.06"
      y="0.1"
      z="0.317"
      o_xyz="0.008 0 0.21"
      o_rpy="${pi} 0 0"/>
</link>


