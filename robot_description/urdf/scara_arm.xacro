  <origin xyz="0.0275 -0.02 -0.05" rpy="0 0 0"/>
  <axis xyz="1 0 0"/>
  <limit lower="-0.015" upper="0.015" effort="20" velocity="0.05"/>
</joint>

<joint name="right_finger_to_wrist" type="prismatic">
  <parent link="wrist_link"/>
