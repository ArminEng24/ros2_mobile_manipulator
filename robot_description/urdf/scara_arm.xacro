<link name="base_footprint"/>

<!-- BASE LINK -->
<link name="gripper_base_link">
  <visual>
    <geometry>
      <mesh filename="file:///home/linos/cad_projects/gripper/base.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <origin xyz="0 ${0.0402/2} ${0.04-0.01}" rpy="${pi} 0 0"/>
    <material name="blue"/>
  </visual>

  <collision>
    <origin xyz="0.04 ${0.0402/2-0.02} ${0.02}" rpy="${pi} 0 0"/>
