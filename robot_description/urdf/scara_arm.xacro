      <cylinder radius="${0.06}" length="0.06"/>
    </geometry>
  </collision>

  <collision>
    <origin xyz="0.008 0 0.21" rpy="${pi} 0 0"/>
    <geometry>
      <box size="0.06 0.1 0.317"/>
    </geometry>
  </collision>

  <inertial>
    <!-- match the main collision frame rotation -->
    <origin xyz="0.0164 0.0 0.16" rpy="${pi} 0 0"/>
    <mass value="3.0"/>
    <inertia
      ixx="0.0353"
      iyy="0.0348"
      izz="0.00377"
      ixy="0.0" ixz="0.0" iyz="0.0"/>
  </inertial>
</link>

